<h1>Edit comment</h1>
<%= form_with(model: [@article, @comment], local: true) do |form| %>
  <p>
    <%= form.label :user %><br>
    <%= form.text_field :commenter %>
  </p>
  <p>
    <%= form.label :comment %><br>
    <%= form.text_area :body %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>
<%= link_to 'Back', articles_path %>