<h1>Comments</h1>
<% if @posts.comments.count == 0 %>
  <h3>No Comments</h3>
<% else %>
  <table class="table table-striped table-dark">
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
    <% @posts.comments.each do |comment| %>
      <tr>
        <td><%= link_to comment.user  , topic_post_comment_path(@topic, @posts, comment.id) %></td>
        <td><%= link_to comment.comment  , topic_post_comment_path(@topic, @posts, comment.id) %></td>
        <td><%= link_to 'Edit', edit_topic_post_comment_path(@topic, @posts, comment.id),class:"btn btn-primary" %></td>
        <td><%= link_to 'Destroy', topic_post_comment_path(@topic,@posts, comment.id),
                        method: :delete,
                        data: {confirm: 'Are you sure?'}, class:"btn btn-primary" %></td>
      </tr>
    <% end %>
  </table>
<% end %>
