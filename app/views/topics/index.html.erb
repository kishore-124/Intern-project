<h1>Topics</h1>
<table class="table table-striped table-dark">
  <thead>
    <tr>
      <th colspan="1"></th>
      <th>Title</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    <% @topics.each do |topic| %>
      <tr >
        <td  ></td>
        <td ><%= link_to  topic.title, topic %></td>
        <td  ><%= link_to 'Edit', edit_topic_path(topic) ,class:"btn btn-primary" %></td>
        <td  ><%= link_to 'Destroy', topic, method: :delete, data: { confirm: 'Are you sure?' } ,class:"btn btn-primary"%></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<div class="container pagination justify-content-center"><%==  pagy_bootstrap_nav @pagy %></div>

