<h1>Topics</h1>
<table class="table table-striped table-dark">
  <thead>
    <tr>
      <th>Email</th>
      <th>Title</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    <% @topics.each do |topic| %>
      <tr >
        <td><%=topic.user.email %></td>
        <td ><%= link_to  topic.title, topic %></td>
        <% if can? :update, topic %>
        <td ><%= link_to 'Edit', edit_topic_path(topic) ,class:"btn btn-primary" %></td>
          <%end %>
          <% if can? :destroy, topic %>
        <td  ><%= link_to 'Destroy', topic, method: :delete, data: { confirm: 'Are you sure?' } ,class:"btn btn-danger"%></td>
          <%end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<% if @pagy.pages>1 %>
<div class="container pagination justify-content-center"><%==  pagy_bootstrap_nav @pagy %></div>
<%end %>