<div class="row">
  <div class="col-4">
<p>
  <strong>Name:</strong>
  <%= @posts.name %>
</p>
<p>
  <strong>Description:</strong>
  <%= @posts.description %>
<p><%= render 'ratings/form' %></p>
</p>
    <% if @tags.size > 0 %>
      <h3>Tags:</h3>
      <% @tags.each do |tag| %>
        <p><%= tag.name %></p>
      <% end %>
    <% end %>
  </div>
  <div class="col-2">
    <p><h3>Ratings</h3></p>
    <%count=1 %>
    <%while count<=5 %>
    <p><%= count %> : <%= @ratings[count].equal?(nil)? 0:@ratings[count] %></p>
<% count=count+1 %>
      <%end %>
  </div>
  <div class="col-2">
    <p>
    <h3>Ratings Average</h3>
    </p>
<p>
  <%= "#{@avg} Out of 5" unless @posts.ratings.count<1 %><br>
</div>
  <div class="col-2">
    <p><h3>Comments count</h3></p>
      <%= @posts.comments_count%>
  </div>
  <div class="col-2">
    <% if @posts.avatar.attached? %>
    <p><h3>Image</h3></p>
    <p><%=image_tag(@posts.avatar,size: '75x75') %></p>
      <%end %>
  </div>
</div>
</p>
<%= render 'comments/comment' %>
<h2>Add a comment:</h2>
<%= render 'comments/form' %>

<%= link_to 'Back', topic_posts_path(@topic) , class:"btn btn-primary"%>


<script>
    Rails.ajax({
        url: "/posts/<%=@posts.id %>/readstatus",
        type: "POST",
    });
</script>