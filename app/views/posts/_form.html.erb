<%= bootstrap_form_with(model: [@topic, @posts], local: true) do |form| %>
  <% if @posts.errors.any? %>
    <div id="alert alert-danger error_explanation"  class="alert alert-danger" role="alert">
      <h2><%= pluralize(@posts.errors.count, "error") %> prohibited this posts from being saved:</h2>
      <ul>
        <% @posts.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <%end %>
  <div class="form-group ">
  <p>
    <%= form.text_field :name,class: "form-control", placeholder:"Please enter a valid Name" %>
  </p>
  </div>
  <div class="form-group ">
  <p>
    <%= form.text_area :description ,class: "form-control", placeholder:"Please enter a valid Description"%>
  </p>
    </div>
  <h3>Creating Tag</h3>
<p>

   <%=form.fields_for :tag do |t| %>
    <%=text_field_tag :name%>
      <%end %>
</p>

  <%= form.file_field :avatar %>
  <p>
    <%= form.submit %>
  </p>
  <p>
    <%= form.label :Tags %><br>
    <% @tags.each do |tag| %>
      <%= check_box_tag "post[tag_ids][]", tag.id, @posts.tags.include?(tag) %>
      <%= tag.name %><br>
    <% end %>
<% end %>
