<h1>Tags</h1>
<table class="table table-striped table-dark">
  <thead>
    <tr>
      <th>Name</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>

  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= link_to tag.name , tag %></td>
        <td><%= link_to 'Edit', edit_tag_path(tag) , class:"btn btn-primary"%></td>
        <td><%= link_to 'Destroy', tag, method: :delete, data: { confirm: 'Are you sure?' } , class:"btn btn-primary"%></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%if @pagy.pages>1 %>
<div class="container pagination justify-content-center"><%== pagy_bootstrap_nav (@pagy) %></div>
<%end %>

